<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrawPractice.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Grid ColumnDefinitions="50,*,50">
                <Border StrokeShape="Rectangle" 
            HeightRequest="50"
            WidthRequest="50" BackgroundColor="#F7F2FB" StrokeThickness="0" Grid.Column="0">

                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="40,0"
                                Radius="3"
                                Opacity="0.2"/>
                    </Border.Shadow>

                </Border>

                <Border StrokeShape="Rectangle" 
                        HeightRequest="50"
                        WidthRequest ="50"
                        BackgroundColor="#F7F2FB"
                        StrokeThickness="0"
                        Grid.Column="2">

                    <Border.Shadow>
                        <Shadow Brush="Gray"
                                Offset="-40,0"
                                Radius="3"
                                Opacity="0.2"/>
                    </Border.Shadow>

                </Border>

            </Grid>
           
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
